@model  IEnumerable<TicketTest.Models.BusStation>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="logOut smBtn">
        @using (Html.BeginForm("LogOut", "Auth"))
        {
            <input type="submit" value="Выход" />
        }
    </div>
    <div class="top">
        <div class="topPart">
            @using (Html.BeginForm("BusStationSearch", "Main"))
            {
                <div class='field'>
                    <label> Название остановки </label>
                    @Html.TextBox("Query");
                </div>
                <div class='smBtn'>
                    <input type="submit" value="Найти остановку" />
                </div>
            }
        </div>
        <div class="topPart">
            @using (Html.BeginForm("FlightSearch", "Main"))
            {
                <div class='field'>
                    <label> От куда </label>
                    @Html.TextBox("StartPointName");
                    <label> Куда </label>
                    @Html.TextBox("EndPointName");
                    <label> Когда </label>
                    <input id="Date" name="Date" type="date" min="1920-01-01" max="@DateTime.Today.ToString()">
                </div>
                <div class="smBtn">
                    <input type="submit" value="Найти рейс" />
                </div>
            }
        </div>
        <div class="topPartMain">
            @using (Html.BeginForm("ReserveOrPurcast", "Main"))
            {
                <div class="longBtn">
                    <input type="submit" value="Забронировать или купить" />
                </div>
            }
        </div>
    </div>
    @{
        <div class="list container">
            @foreach (var v in Model)
            {
                <div class="item row">
                    <div class="iSet col-md-6">
                        Название остановки: @v.Name
                    </div>
                    <div class="iSet col-md-6">
                        Описание остановки: @v.Description
                    </div>
                    <div class="iSet col-md-6">
                        Статус остановки: @v.Status
                    </div>
                </div><br />
            }
        </div>
    }
</body>
</html>
